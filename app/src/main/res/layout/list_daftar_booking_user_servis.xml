<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginRight="12dp" android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp" android:layout_marginBottom="2dp" android:clickable="true"
    >
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:paddingRight="14dp" android:paddingTop="14dp"
                android:paddingBottom="14dp" android:paddingLeft="6dp">

            <ImageView
                    android:layout_width="47dp"
                    android:layout_height="47dp" app:srcCompat="@drawable/img_list"
                    android:id="@+id/imageView5" android:scaleType="fitXY"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1" android:layout_marginLeft="52dp">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:text="Pesanan Id : #0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/tvBookingIdLDBUS"
                            android:textStyle="bold" android:layout_weight="1"/>
                    <TextView
                            android:text="12/10/19"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/tvDateLDBUS"
                            android:textStyle="bold" android:layout_weight="0" android:textAlignment="textEnd"
                            android:textSize="10sp"/>
                </LinearLayout>
                <TextView
                        android:text="Jenis Servis: BODY"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/tvJenisLDBUS" android:textSize="18sp"
                        android:layout_marginTop="2dp"/>
                <TextView
                        android:text="Delear Nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/tvDealerLDBUS"
                        android:layout_marginTop="16dp"
                        android:textAlignment="viewStart" android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp"/>
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>