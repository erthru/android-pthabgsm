<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.pesanandetail.PesananDetailActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="56dp" android:paddingLeft="16dp" android:paddingRight="16dp"
        >
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:gravity="center_vertical">
                <ImageView
                        android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp" android:id="@+id/btnBackPD" android:layout_weight="0"
                        android:scaleType="fitXY" android:layout_marginTop="2dp" android:layout_marginLeft="-8dp"/>
                <TextView
                        android:text="Pesanan Detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView2"
                        android:layout_gravity="center_vertical" android:textSize="19sp"
                        android:textColor="@color/colorTitle"
                        android:fontFamily="sans-serif-condensed-light" android:textStyle="bold"/>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout android:layout_width="match_parent" android:layout_height="2dp"
                     android:background="@drawable/toolbar_shadow">
        </FrameLayout>
        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:fillViewport="true">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_marginTop="12dp"
                        android:layout_marginRight="12dp" android:layout_marginLeft="12dp"
                        android:layout_marginBottom="2dp">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:padding="16dp">
                        <TextView
                                android:text="Pesanan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textSize="18sp" android:textColor="@color/colorAccent"
                        />
                        <TextView
                                android:text="Invoice Id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView7"
                                android:textStyle="bold" android:layout_marginTop="4dp"/>
                        <TextView
                                android:text="#0"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/tvInvoicePD"
                                android:textSize="18sp" android:layout_marginTop="-2dp"/>
                        <TextView
                                android:text="Jenis Servis"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView8"
                                android:layout_marginTop="8dp" android:textStyle="bold"/>
                        <TextView
                                android:text="BODY"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/tvJenisPD"
                                android:textSize="18sp" android:layout_marginTop="-2dp"/>
                        <TextView
                                android:text="Keterangan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView9"
                                android:layout_marginTop="8dp" android:textSize="14sp" android:textStyle="bold"/>
                        <TextView
                                android:text="-"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/tvKeteranganPD"
                                android:textSize="18sp" android:layout_marginTop="-2dp"/>
                        <TextView
                                android:text="Tgl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView10"
                                android:textStyle="bold" android:layout_marginTop="8dp"/>
                        <TextView
                                android:text="00:00:00 | 00-00-1990"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/tvTglPD" android:textSize="18sp"
                                android:layout_marginTop="-2dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_marginTop="10dp"
                        android:layout_marginRight="12dp" android:layout_marginLeft="12dp"
                        android:layout_marginBottom="2dp">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:padding="16dp">
                        <TextView
                                android:text="Data Pengguna"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textSize="18sp" android:textColor="@color/colorAccent"
                        />
                        <TextView
                                android:text="Nama"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView11"
                                android:layout_marginTop="4dp" android:textStyle="bold"/>
                        <TextView
                                android:text="Puput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/tvNamaPD"
                                android:textSize="18sp" android:layout_marginTop="-2dp"/>
                        <TextView
                                android:text="Alamat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView12"
                                android:textStyle="bold" android:layout_marginTop="8dp"/>
                        <TextView
                                android:text="asdasd asd asd a as "
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/tvAlamatPD"
                                android:textSize="18sp" android:layout_marginTop="-2dp"/>
                        <TextView
                                android:text="Dealer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/textView13"
                                android:textStyle="bold" android:layout_marginTop="8dp"/>
                        <TextView
                                android:text="PT"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/tvDealerPD"
                                android:textSize="18sp" android:layout_marginTop="-2dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_marginTop="10dp"
                        android:layout_marginRight="12dp" android:layout_marginLeft="12dp"
                        android:layout_marginBottom="2dp">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:padding="16dp">
                        <TextView
                                android:text="Keterangan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textSize="18sp" android:textColor="@color/colorAccent"
                        />
                        <TextView
                                android:text="* Keterangan pesanan disini"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/tvKeteranganDetailPD"/>
                        <Button
                                android:text="LIHAT DAFTAR SERVIS"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/btnViewPartPD"
                                android:textColor="@android:color/white" android:textStyle="bold"
                                android:background="@color/successColor" android:layout_marginTop="10dp"
                                android:visibility="gone"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_marginTop="10dp"
                        android:layout_marginRight="12dp" android:layout_marginLeft="12dp"
                        android:layout_marginBottom="2dp">
                    <ProgressBar
                            style="?android:attr/progressBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/pbStatusPD" android:layout_gravity="center"
                            android:layout_marginTop="35dp" android:layout_marginBottom="35dp"/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:padding="16dp">
                        <TextView
                                android:text="Status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textSize="18sp" android:textColor="@color/colorAccent"
                        />
                        <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:layout_marginTop="10dp"
                                android:id="@+id/rvStatusPD"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>